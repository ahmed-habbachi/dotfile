# Basic Settings
set hidden true
set ignorecase true
set icons true

source '~/.config/lf/opener'

# Custom Functions ------
# Make directory
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

# Make file
cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

#  Set wallpaper
cmd setwallpaper ${{
    cp "$f" ~/.config/wall.jpg
    xwallpaper --zoom "$f"
    betterlockscreen -u "$f" --fx
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

cmd archive-zip ${{
  files=$(printf "$fx" | tr '\n' ' ')
  printf "File Name: "
  read ans
  zip -r "$ans.zip" $files
}}

cmd archive-tar ${{
  files=$(printf "$fx" | tr '\n' ' ')
  printf "File Name: "
  read ans
  tar cvf "$ans.tar" $files
}}

cmd archive-targz ${{
  files=$(printf "$fx" | tr '\n' ' ')
  printf "File Name: "
  read ans
  tar cvzf "$$ans.tar.gz" $files
}}

# Trash bindings
cmd trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}

    trash-put "$(basename "$file")"
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}

# Restore trash
cmd restore_trash ${{
  trash-restore
}}

# Copy to clipboard
cmd copy_to_clipboard %{{
    if type pbcopy > /dev/null 2>&1; then
    printf '%s' "$f" | pbcopy
    elif type xsel > /dev/null 2>&1; then
    printf '%s' "$f" | xsel -ib
    fi
}}

# ------

# Open application
cmd open-with-gui &$@ $fx ## opens with a gui application outside lf client
cmd open-with-cli $$@ $fx ## opens with a cli application inside lf client

# Bindings
map d
map m

# map c %code "$f"

map az archive-zip
map at archive-tar
map ag archive-targz
map au unarchive

map ae $wine "$f"

# Basic Functions
map . set hidden!
map dd trash
map dr restore_trash
map p paste
map x cut
map y copy
map <enter> open
map <esc> quit
map R reload
map mf mkfile
map md mkdir
map bg setwallpaper
map C clear
map <c-c> :copy_to_clipboard
map O push :open-with-gui<space> ## input application
map o push :open-with-cli<space> ## input application

# Movement
map gw cd ~/workspace
map gD cd ~/Downloads
map gP cd ~/Pictures
map gc cd ~/.config
map gv cd ~/videos
map gs cd ~/.local/bin
map gt cd ~/.local/share/Trash/files

